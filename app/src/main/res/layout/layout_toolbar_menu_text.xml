    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/space2x">

    <com.bzu.yhd.pocketcampus.view.widget.TextViewCompat
        android:id="@+id/menu_location_text"
        android:layout_width="wrap_content"
